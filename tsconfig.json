{
    "compilerOptions": {
        "baseUrl": "src",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "paths": {
            "@/*": ["*"],
            "@config/*": ["config/*"],
            "@controllers/*": ["controllers/*"],
            "@db/*": ["db/*"],
            "@middlewares/*": ["middlewares/*"],
            "@my-types/*": ["types/*"],
            "@routes/*": ["routes/*"],
            "@schemas/*": ["schemas/*"],
            "@services/*": ["services/*"],
            "@utils/*": ["utils/*"]
        },
        "resolveJsonModule": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2022",
        "types": ["node", "vitest/globals"]
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*"]
}
