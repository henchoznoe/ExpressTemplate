{
  "name": "express-template",
  "version": "2.5.4",
  "description": "A Node.js/Express.js template with TypeScript, Prisma, Zod, InversifyJS, and more.",
  "homepage": "https://github.com/henchoznoe/ExpressTemplate#readme",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsup src/index.ts --format esm --splitting --sourcemap --out-dir dist --clean",
    "start": "node dist/index.js",
    "db:deploy": "prisma migrate deploy",
    "lint": "biome lint --write",
    "format": "biome format --write",
    "check": "biome check --write",
    "ci": "biome check",
    "prepare": "lefthook install",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "db:reset": "npm run db:down && npm run db:up && sleep 2 && npx prisma migrate dev --name init"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/henchoznoe/ExpressTemplate.git"
  },
  "author": "No√© Henchoz",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/henchoznoe/ExpressTemplate/issues"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@prisma/client": "^6.19.0",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.3.0",
    "inversify": "^7.10.4",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "ms": "^2.1.3",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@swc/core": "^1.15.3",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/handlebars": "^4.0.40",
    "@types/hpp": "^0.2.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/ms": "^2.1.0",
    "@types/node": "^24.10.1",
    "@types/statuses": "^2.0.6",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "dotenv": "^17.2.3",
    "globals": "^16.5.0",
    "lefthook": "^2.0.4",
    "prisma": "^6.19.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
