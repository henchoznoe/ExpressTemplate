# --- Root ---
# This file is the root-level configuration.
# EditorConfig will stop searching for .editorconfig files in parent directories.
root = true

# --- Global Settings ---
# Apply these settings to all files in the project.
[*]
# File encoding
charset = utf-8
# Line ending format
end_of_line = lf
# Ensure files end with a newline
insert_final_newline = true
# Use spaces instead of tabs
indent_style = space
# Indent size of 4 spaces
indent_size = 4
# Remove trailing whitespace before saving
trim_trailing_whitespace = true
# Maximum line length recommendation
max_line_length = 120

# --- File-Specific Overrides ---

# For Markdown files, allow trailing whitespace
[*.md]
trim_trailing_whitespace = false

# For configuration files, use a 2-space indent for better readability.
[*.{yml,yaml,json}]
indent_size = 2
