# ==============================================================================
# GENERAL APPLICATION SETTINGS
# ==============================================================================
NODE_ENV=development
PORT=3000

# ==============================================================================
# CORS SETTINGS
# ==============================================================================
CORS_ORIGIN=https://your-frontend.com
CORS_METHODS=GET,POST,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# ==============================================================================
# SECURITY / JWT SETTINGS
# ==============================================================================
JWT_ACCESS_SECRET=your_super_secret_for_access_token
JWT_REFRESH_SECRET=your_super_secret_for_refresh_token
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=12

# ==============================================================================
# DATABASE SETUP
# ==============================================================================

# Docker Container Credentials
# Not used by the application, but used by Docker Compose to set up the database container.
DB_USER=dev_user
DB_PASSWORD=dev_password
DB_NAME=dev_db

# Application Connection Strings
# Use these for local development with Docker.
# In production, set these to your actual database connection strings.
DATABASE_URL="postgresql://dev_user:dev_password@localhost:5432/dev_db?schema=public"
